
    <form method="get" action="/quizes?<%= quiz.id %>/answer">
        <p>Buscar Pregunta: </p>
        <input type="text" name="search" value="Introduzca pregunta a buscar"/>
        <input type="submit" value="Buscar"/>
    </form>
    </br>
    <table cellspacing="10" >
        <% var i; for (i=0; i< quiz.length; i++) { %>
            <tr>
                <td><strong>Tema:</strong> </td>
                <td ><%= quiz[i].tema %></td>
                <td><strong>Pregunta:</strong> </td>
                <td><a href="quizes/<%= quiz[i].id %>"><%= quiz[i].pregunta %></a></td>
                <td><a href="quizes/<%= quiz[i].id %>/edit"><button>editar</button></a></td>
                <td>
                    <form method="post" action="quizes/<%= quiz[i].id %>?_method=delete">
                        <button type="submit" onClick="return confirm ('Borrar <%= quiz[i].pregunta %>');">
                            borrar
                        </button>
                    </form>
                </td>
            </tr>
        <%}%>
    </table>
<a href="/quizes/new"><button type="button">Crear pregunta</button></a>
